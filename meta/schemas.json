{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$dynamicAnchor": "meta",
  "$ref": "https://json-schema.org/draft/2020-12/schema",
  "properties": {
    "$id": false,
    "$comment": {
      "$ref": "#/$defs/clean-prose"
    },
    "title": {
      "$ref": "#/$defs/clean-prose"
    },
    "description": {
      "$ref": "#/$defs/clean-prose"
    }
  },
  "$defs": {
    "clean-prose": {
      "type": "string",
      "not": {
        "anyOf": [
          {
            "pattern": "\\.$"
          },
          {
            "pattern": "  \\s"
          },
          {
            "pattern": "[\\n\\r\\t]"
          },
          {
            "pattern": "[\\x00-\\x1F\\x7F]"
          }
        ]
      },
      "pattern": "^[^\\s].*[^\\s]$|^[^\\s]$"
    }
  }
}
